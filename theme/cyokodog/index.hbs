{{#extend "layout"}}


{{#content "body"}}
<div class="l-article">
  <article class="article">

    <div class="article__header">
      <h1 class="article__title">
        <a href="{{article.url}}" title="{{article.title}}">{{article.title}}</a>
      </h1>
      <ul class="article__info">
        <li class="article__info__date">{{article.postDate}}</li>
<!--
        <li class="article__info__category"><a href="{{category.url}}" rel="category tag">{{category.title}}</a></li>
-->
      </ul>
    </div>
    <div class="article__body">
    {{{ contents }}}
    </div>

  </article>
</div>
{{/content}}



{{#content "pageNav"}}

  {{> pageNav}}

{{/content}}






{{/extend}}
